    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/menu_scroll_menu_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/menu_scroll_menu_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textAllCaps="false"/>

</LinearLayout>